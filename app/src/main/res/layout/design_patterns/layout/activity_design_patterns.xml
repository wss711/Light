<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patterns.DesignPatternsActivity">

    <Button
        android:id="@+id/create_patterns_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Patterns"/>
    <Button
        android:id="@+id/struct_patterns_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Struct Patterns"/>
    <Button
        android:id="@+id/behavior_patterns_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Behavior Patterns"/>

</LinearLayout>