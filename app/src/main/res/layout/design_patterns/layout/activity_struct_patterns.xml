<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patterns.StructPatternsActivity">

    <Button
        android:id="@+id/proxy_patterns_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="代理模式"/>
    <Button
        android:id="@+id/adapter_patterns_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="适配器模式"/>
    <Button
        android:id="@+id/decorator_patterns_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="装饰模式"/>
    <Button
        android:id="@+id/facade_patterns_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="外观模式"/>
    <Button
        android:id="@+id/bridge_patterns_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="桥接模式"/>
    <Button
        android:id="@+id/compose_patterns_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="组合模式"/>
    <Button
        android:id="@+id/flyweight_patterns_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="享元模式"/>

</LinearLayout>